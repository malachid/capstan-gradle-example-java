# Capstan will download this automatically.
base: cloudius/osv-openjdk8

# Start up the application.
cmdline: /java.so -jar /capstan-gradle-example-java-1.0-SNAPSHOT.jar /config/staging.json

# Build the application.
build: ./gradlew buildRootFS

# Files to include in the image.
rootfs: build/rootfs-1.0-SNAPSHOT